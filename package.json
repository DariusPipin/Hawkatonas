{
  "name": "unified-achievement-platform",
  "version": "1.0.0",
  "description": "A unified platform for tracking gaming achievements across multiple platforms",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:frontend\"",
    "dev:api": "nodemon --exec ts-node src/api/server.ts",
    "dev:worker": "nodemon --exec ts-node src/worker/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:api && npm run build:worker && npm run build:frontend",
    "build:api": "tsc -p tsconfig.api.json",
    "build:worker": "tsc -p tsconfig.worker.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/api/server.js",
    "start:worker": "node dist/worker/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:create": "ts-node src/database/create-migration.ts",
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "canvas": "^2.11.2",
    "canvas-confetti": "^1.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "gaming",
    "achievements",
    "steam",
    "xbox",
    "playstation",
    "trophies",
    "leaderboard",
    "api"
  ],
  "author": "Achievement Platform Team",
  "license": "MIT"
}
